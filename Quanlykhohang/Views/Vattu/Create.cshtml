@model Quanlykhohang.Models.vattu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mt-5">
    <div class="card-header bg-danger text-white">
        <h3 class="font-weight-bold text-center">DANH SÁCH VẬT TƯ</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row mt-3">
                    <div class="col-md-3">
                        <label>MÃ VẬT TƯ</label>
                    </div>
                    <div class="col-md-9">

                        @Html.EditorFor(model => model.ma_vt, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ma_vt, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="row mt-3">
                    <div class="col-md-3">
                        <label>TÊN VẬT TƯ</label>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.ten_vt, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ten_vt, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-3">
                        <label>ĐƠN VỊ TÍNH</label>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.dvt_vt, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dvt_vt, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-3">
                        <label>SỐ LƯỢNG</label>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.soluong_vt, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.soluong_vt, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-3">
                        <label>LOẠI VẬT TƯ</label>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.loai_vt, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.loai_vt, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 mt-3">
                        <input type="submit" value="Lưu Thông Tin" class="btn bg-danger text-white" />
                        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn bg-warning text-white text-right" })
                    </div>
                </div>
            </div>
        }

    </div>
</div>





